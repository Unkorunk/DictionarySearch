<Window x:Class="DictionarySearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DictionarySearch" Height="350" Width="525">
    <Grid Margin="8px">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <CheckBox Grid.Column="0" Grid.Row="0" Content="Поиск по последовательным символам" Name="IsSeqSearch"
                  Checked="IsSeqSearch_OnEvent" Unchecked="IsSeqSearch_OnEvent" VerticalAlignment="Center" />
        <Label Grid.Column="1" Grid.Row="0" Name="Status" Content="По вашему запросу ничего не нашлось"
               HorizontalAlignment="Right" />

        <ListView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Name="OutputListView" Margin="0 4px 0 0" />
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Name="InputTextBox"
                 Margin="0 4px 0 0" TextChanged="InputTextBox_OnTextChanged" />
    </Grid>
</Window>